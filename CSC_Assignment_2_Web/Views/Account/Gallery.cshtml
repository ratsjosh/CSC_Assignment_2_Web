    .gallery_product {
        margin-bottom: 30px;
    }
</style>

<div class="container">
    <h1>Gallery</h1>
    <hr>
    <div class="row">
        <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6">
            <img src="http://fakeimg.pl/365x365/" class="img-responsive">
        </div>
        <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6">
            <img src="http://fakeimg.pl/365x365/" class="img-responsive">
