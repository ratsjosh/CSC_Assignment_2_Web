
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src='https://www.google.com/recaptcha/api.js'></script>

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div id="divSigninError" class="alert alert-danger collapse">
            <a id="linkClose" href="#" class="close">&times;</a>
            <div id="divLoginErrorList"></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <form id="loginform" class="form-horizontal" role="form" enctype="application/x-www-form-urlencoded">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="txtUsername" type="text" class="form-control" name="username" value="" placeholder="username or email">
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="txtPassword" type="password" class="form-control" name="password" placeholder="password">
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                            </label>
                        </div>
                    </div>
                    <div style="margin-top:10px" class="form-group">
                        <div style="margin:10px;" class="g-recaptcha" data-sitekey="6LfvbSwUAAAAAO-uSqOvrfTWF4idPQyCYXBlpvB5"></div>
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <a id="btnLogin" href="#" class="btn btn-success">Login  </a>
                            <a id="btnLoginWithFacebook" href="#" class="btn btn-primary">Login with Facebook</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Don't have an account!
                                <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                    Sign Up Here
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="signupbox" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <!--Bootstrap alert to display any validation errors-->
        <div id="divSignupError" class="alert alert-danger collapse">
            <a id="linkClose" href="#" class="close">&times;</a>
            <div id="divSignUpErrorList"></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign Up</div>
                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">Sign In</a></div>
            </div>
            <div class="panel-body">
                <form id="signupform" class="form-horizontal" role="form">
                    <div id="signupalert" style="display:none" class="alert alert-danger">
                        <p>Error:</p>
                        <span></span>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Name</label>
                        <div class="col-md-6">
                            <input id="input_name" name="textinput" placeholder="Name" class="form-control input-md" required="" type="text">
                            <span class="help-block"> </span>
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Email</label>
                        <div class="col-md-6">
                            <input id="input_email" name="textinput" placeholder="Email" class="form-control input-md" required="" type="text">
                            <span class="help-block"> </span>
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Password</label>
                        <div class="col-md-6">
                            <input id="input_password" name="textinput" placeholder="Password" class="form-control input-md" required="" type="password">
                            <span class="help-block"> </span>
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Confirm Password</label>
                        <div class="col-md-6">
                            <input id="input_confirmPassword" name="textinput" placeholder="confirm Password" class="form-control input-md" required="" type="password">
                            <span class="help-block"> </span>
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Reknown</label>
                        <div class="col-md-6">
                            <input id="input_reknown" name="textinput" placeholder="Reknown" class="form-control input-md" type="text">
                            <span class="help-block"> </span>
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="textinput">Biography</label>
                        <div class="col-md-6">
                            <textarea rows="5" class="form-control" id="input_bio" placeholder="Biography">I am a software programmer with 10 years of development experience.</textarea>
                            <span class="help-block"> </span>
                        </div>
                    </div>
                    <div style="border-top: 1px solid #999; padding-top:20px" class="form-group">
                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                <button id="btnRegister" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>
                                <span style="margin: 0 10px;">or</span>
                                <button id="btn-fbsignup" type="button" class="btn btn-primary"><i class="icon-facebook"></i> ï¿½ Sign Up with Facebook</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var errors;
        escapeLoading();

        //Close the bootstrap alert
        $('#linkClose').click(function () {
            $('#divError').hide('fade');
        });

        // Save the new user details
        $('#btnRegister').click(function () {
            $.ajax({
                url: properties.hostConnectionString + '/Account/Register',
                method: 'POST',
                crossDomain: true,
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                data: {
                    Email: $('#input_email').val(),
                    Password: $('#input_password').val(),
                    ConfirmPassword: $('#input_confirmPassword').val(),
                    Name: $('#input_name').val(),
                    Reknown: $('#input_reknown').val(),
                    Bio: $('#input_bio').val()
                },
                success: function () {
                    swal({
                        title: 'Success',
                        text: 'Successfully signed up!',
                        timer: 2000,
                        type: 'success'
                    }).then(
                        function () {
                            $('#signupbox').hide();
                            $('#loginbox').show();
                        },
                        // handling the promise rejection
                        function (dismiss) {
                            if (dismiss === 'timer') {
                                $('#signupbox').hide();
                                $('#loginbox').show();
                            }
                        });
                },
                error: function (jqXHR) {
                    $('#divSignUpErrorList').append("<ul id='errorList'></ul>");
                    errors = jqXHR.responseJSON.value.messages;
                    for (i = 0; i < errors.length; i++) {
                        $("#errorList").append("<li>" + errors[i].errorMessage + "</li>");
                    }
                    $('#divSignupError').show('fade');
                }
            });
        });

        $('#linkClose').click(function () {
            $('#divError').hide('fade');
        });

        $('#btnLogin').click(function (e) {
            var captchaId = grecaptcha.getResponse();
            e.preventDefault();
            $.ajax({
                // Post username, password & the grant type to /token
                url: properties.hostConnectionString + '/Token',
                method: 'POST',
                contentType: 'application/x-www-form-urlencoded',
                data: {
                    username: $('#txtUsername').val(),
                    password: $('#txtPassword').val(),
                    captcha: captchaId,
                    grant_type: 'password'
                },
                success: function (response) {
                    if ($("#login-remember").is(":checked")) {
                        let talent = {
                            Email: $('#txtUsername').val(),
                            AccessToken: response.access_token,
                            LoginModel: JSON.stringify(response.loginModel)
                        }
                        setCookie("talent", JSON.stringify(talent), 1);
                    }
                    sessionStorage.setItem("username", $('#txtUsername').val());
                    sessionStorage.setItem("accessToken", response.access_token);
                    sessionStorage.setItem("loginModel", JSON.stringify(response.loginModel));
                    swal({
                        title: 'Success',
                        text: 'Successfully signed in!',
                        timer: 2000,
                        type: 'success'
                    }).then(
                        function () {
                            window.location.href = "../Home/Index";
                        },
                        // handling the promise rejection
                        function (dismiss) {
                            if (dismiss === 'timer') {
                                window.location.href = "../Home/Index";
                            }
                        });
                },
                error: function (jqXHR) {
                    $('#divLoginErrorList').text(jqXHR.responseText);
                    $('#divSigninError').show('fade');
                    swal({
                        title: 'Failed to log in',
                        text: jqXHR.responseText,
                        timer: 2000,
                        type: 'error'
                    }).then(
                        function () {
                            window.location.href = "../Account/Index";
                        },
                        // handling the promise rejection
                        function (dismiss) {
                            if (dismiss === 'timer') {
                                console.log('I was closed by the timer');
                                window.location.href = "../Account/Index";
                            }
                        }
                        )
                }
            });
        });
    });
</script>
